<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Petbook Profil</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
	<style>
		body 		{  word-wrap:break-word;}

	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-user"></span> Profil</h1>
			<% include ./partials/menu %>
	</div>
		
		<!-- LOCAL INFORMATION -->
		<div class="col-sm-20">
		<div class="row">
			<div class="well">
				<h3><span class="fa fa-user"></span> Votre profil</h3>
					<table class="table table-striped">
						<tbody>
						<tr align="left">
                        	<td ><img src="<%= myProfile.picture %>" class="img" width="304" height="236"></td>
                        	<td></td>
                       	</tr>

						<tr>
							<td>Nom :<%= myProfile.name %></td>
							<td>Age :<%= myProfile.age %></td>
                        </tr>
                        <tr>
							<td colspan = "3">Bio : <br><textArea rows="6" cols="100"  disabled style = "background-color : transparent; border-color : transparent"><%= myProfile.bio%></textArea></td>
						</tr>
						<tr>
						</tr>

						</tbody>
					</table>
				</div>
		<!-- PROFILE FORM -->
        	        <div class="row">
        <textarea ng-model="newWaste"
                  ng-keypress="sendWaste($event)"
                  class="form-control"
                  placeholder="Donnez des news" required>
        </textarea><br>
		<button type="submit" class="btn btn-info btn-xs">Donner des news</button>
	</div>
</div>
	</form>

<!--POST-->
<% 
	
	if (listPost.length > 0) {
	console.log("test")
     for(var i = 0; i<listPost.length; i++){
        %>
    <div class="row">
        <div class="well">
            <div class="media">
                <!--<a class="pull-left" href="#">
                    <img class="media-object" src="http://placekitten.com/300/300">
                </a>-->
                <div class="media-body">
                            <p name="race" class="text-right value = "By <%= listPost[i].name %></p>
                            <p><%= listPost[i].content %></p>
                            <ul class="list-inline list-unstyled">
                            <li><span><i class="glyphicon glyphicon-calendar"></i> <%= listPost[i].publishedDate %> </span></li>
                            <li>|</li>
                            <span><i class="glyphicon glyphicon-comment"></i> 0 commentaires</span>
                            <li>|</li>
                            <li>
                            <!-- Use Font Awesome http://fortawesome.github.io/Font-Awesome/ -->
                            <span><%= listPost[i].nbLike %> <i class="fa fa-heart"></i></span> &nbsp;
							<button  onclick="javascript:afficher_cacher('myComment');" class="btn btn-info btn-xs">Commenter</button>
							<!--<span class="button" id="bouton_texte" onclick="javascript:afficher_cacher('myComment');">Commenter</span>-->
							<span id="myComment" style="display: none;">
							<form method="POST" action = "/myPet/addComment">
								<div class="row">
									<input type = "hidden" name = "idUser" value = "<%= myProfile.id =>" >
									<input type ="hidden" name = "visiteur" value="">
									<textarea class="form-control"placeholder="Ecrire un super commentaire" required>
									</textarea><br>
									<button type="submit" class="btn btn-info btn-xs">Envoyer</button>
								</div>
							</span>
							</li>
							</ul>
                </div>
            </div>
        </div>
    </div>
   <%
        }
    }
%>

<script>
function afficher_cacher(id)
{
    if(document.getElementById(id).style.display=="none")
    {
        document.getElementById(id).style.display="block";
    }else
    {
        document.getElementById(id).style.display="none";
    }
    return true;
}
</script>

	<% include ./partials/footer %>
</body>
</html>

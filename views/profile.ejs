<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
	<style>
		body 		{  word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-user"></span> Profil</h1>
			<% include ./partials/menu %>
	</div>

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-20">
		<div class="row">
			<div class="well">
				<h3><span class="fa fa-user"></span> Votre profil</h3>
					<table class="table table-striped">
						<tbody>
						<tr>
							<td>Nom : <%= user.username %></td>
							<td>Prenom : %prenom%</td>
							<td>Votre photo : 
								<img />
							</td>
						</tr>
						<tr>
							<td>Age : %Age%</td>
							<td>Email : %mail%</td>
							<td>Bio : %Bio%</td>
						</tr>
						<tr>
						</tr>
						</tbody>
					</table>
					<p>
						<!--<strong>id</strong>: <%= user.id %><br>
						<strong>Login</strong>: <%= user.username %><br>
						<strong>password</strong>: <%= user.password %><br>-->
					</p>
					</div>
		<!-- PROFILE FORM -->
        	<form action="/profile" method="post">
        		<div class="form-group">
        			<label>Nom</label>
        			<input type="text" class="form-control" name="firstName">
        		</div>
        		<div class="form-group">
        			<label>Prénom</label>
        			<input type="text" class="form-control" name="name">
        		</div>
        		<div class="form-group">
                    <label>Image</label>
                    <input type="text" class="form-control" name="picUser">
                </div>
                <div class="form-group">
                    <label>Age</label>
                    <input type="number" class="form-control" name="name" min="18" max="99" step="10">
                </div>
                <div class="form-group">
                    <label>Biographie</label>
                    <input type="text" class="form-control" name="bio">
                </div>
                <div class="form-group">
                    <label>Adresse mail</label>
                    <input type="mail" class="form-control" name="mail">
                </div>

        		<button type="submit" class="btn btn-warning btn-lg">Mettre à jour le profil</button>

				<button type="submit" class="btn btn-danger btn-lg"">Supprimer votre compte</button>
        	</form>

			</div>
		</div>
	</div>

</div>
	<% include ./partials/footer %>
</body>
</html>

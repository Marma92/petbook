<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Petbook Profil</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
	<style>
		body 		{  word-wrap:break-word; }
	</style>
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-user"></span> Profil</h1>
			<% include ./partials/menu %>
	</div>

		<!-- LOCAL INFORMATION -->
		<div class="col-sm-20">
		<div class="row">
			<div class="well">
				<h3><span class="fa fa-user"></span> Votre profil</h3>
					<table class="table table-striped">
						<tbody>
						<tr align="left">
                        	<td ><img src="<%= picture %>" class="img" width="304" height="236"></td>
                        	<td><a href="/uploadPictureProfile"><input type = "button" class = "btn-btn-defaut"  Value = "Modifier"></button></a></td>
                        	<td></td>
                       	</tr>

						<tr>
							<td>Nom : <%= user %></td>
							<td>Prenom :<%= firstName %></td>
							<td>Age :<%= age%></td>
                        </tr>
                        <tr>
							<td colspan = "3">Bio : <br><textArea rows="6" cols="100"  disabled style = "background-color : transparent; border-color : transparent"><%= bio%></textArea></td>
						</tr>
						<tr>
						</tr>

						</tbody>
					</table>

					</div>
		<!-- PROFILE FORM -->
        	<form action="/profile" method="post">


                 <% if (msgError.length > 0) { %>
            	    <div class="alert alert-danger"> <%= msgError %> </div>
            	 <% } %>

        		<div class="form-group">
        			<label>Nom</label>
        			<input type="text" class="form-control" name="firstName" value = "<%= firstName %>">
        		</div>
        		<div class="form-group">
        			<label>Prénom</label>
        			<input type="text" class="form-control" name="name"  value = "<%= name %>">
        		</div>
                <div class="form-group">
                    <label>Age</label>
                    <input type="number" class="form-control" name="age" min="18" max="120" step="0"  value = "<%= age %>">
                </div>
                <div class="form-group">
                    <label>Bio</label>
                    <br>
                    <textarea name = "bio" rows="6" cols="165" ><%= bio %></textarea>
                </div>
        		<button type="submit" class="btn btn-warning btn-lg">Mettre à jour le profil</button>
        	</form>
			</div>
		</div>
	</div>
<br><br><br>
</div>
	<% include ./partials/footer %>
</body>
</html>

<!doctype html>
<html>
<head>
	<title>Node Authentication</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-paw"></span>Vos animaux</h1>
			<% include ./partials/menu %>
	</div>

<!-- MENU ANIMAL -->
    <div class="panel panel-primary">
            <div class="panel-body">
                <a href="/addPet"><button class="btn btn-info btn-sm"><span class="fa fa-plus"></span>  Nouvel animal </button></a>
            </div>
        </div>
    </div>
		
<br>

<!-- PROFIL ANIMAL -->
<div class="panel panel-success col-sm-3 col-sm-offset-2">
    <div class="panel-heading">%Nom Animal %   &nbsp;&nbsp; 
        <button type="submit" class="btn btn-success btn-xs">Voir sa page</button></div>
            <!-- PROFILE FORM -->
                <form action="/profile" method="post">
                    <div class="form-group">
                        <label>Nom</label>
                        <input type="text" class="form-control" name="name" value="%Nom%">
                    </div>
                    <div class="form-group">
                        <label>Race</label>
                        <input type="text" class="form-control" name="race" value="%Race%">
                    </div>
                    <div class="form-group">
                        <label>Sexe</label>
                        <input type="text" class="form-control" name="sex" value="%Sexe%">
                    </div>
                    <div class="form-group">
                        <label>Photo</label>
                        <input type="text" class="form-control" name="picUser" value="%Photo%">
                    </div>
                    <div class="form-group">
                        <label>Age</label>
                        <input type="number" class="form-control" name="name" min="0" max="50" step="0.5" value="1">
                    </div>
                    <div class="form-group">
                        <label>Biographie</label>
                        <input type="text" class="form-control" name="bio" value="%Bio%">
                    </div>

                    <button type="submit" class="btn btn-warning btn-sm">Mettre à jour ce profil</button><br><br>
                    <button type="submit" class="btn btn-danger btn-sm"">Donner ce compte</button>
                    <button type="submit" class="btn btn-danger btn-sm"">Supprimer ce profil</button>
                </form>
    </div>
</div>


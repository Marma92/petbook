<!-- views/profile.ejs -->
<!doctype html>
<html>
<head>
	<title>Mes animaux</title>
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
</head>
<body>
<div class="container">

	<div class="page-header text-center">
		<h1><span class="fa fa-paw"></span>Mes animaux</h1>
			<% include ./partials/menu %>
	</div>

<!-- MENU ANIMAL -->
    <div class="panel panel-primary">
            <div class="panel-body">
                <a href="/addPet"><button class="btn btn-info btn-sm"><span class="fa fa-plus"></span>  Nouvel animal </button></a>
            </div>
        </div>
    </div>
		
<br>

<!-- PROFIL ANIMAL -->

<% if (ListPets.length > 0) {
    for(var i = 0; i<ListPets.length; i++){
%>
<div class="panel panel-success col-sm-3 col-sm-offset-2">
     <div class="panel-heading">

            <table>
                <tr>
                    <td colspan="2"><img src="<%= ListPets[i].picture %>" width="304" height="236"></td>
                </tr>
                <tr>
                    <td> <%= ListPets[i].name %>   &nbsp;&nbsp;</td>
                    <td>
                         <form action="/myPet" method="post">
                            <input type="hidden" name ="id" value = "<%= ListPets[i].id %>">
                            <input type="submit" class="btn btn-success btn-xs" value ="Voir sa page">
                          </form>

                    </td>
                </tr>
            </table>
        </div>

            <!-- PROFILE FORM -->
                <form action="/pet" method="post">
                    <div class="form-group">
                        <label>Nom</label>
                        <input type="text" class="form-control" name="name" value="<%= ListPets[i].name %>">
                    </div>
                    <div class="form-group">
                        <label>Race</label><br>
                        <SELECT name = "race">
                        <option></option>
                        <% if (ListRaces.length > 0) {

                            for(var j = 0; j<ListRaces.length; j++){
                                if(ListRaces[j].id==ListPets[i].race_id){
                        %>
                            <option name="race" value = "<%= ListRaces[j].id %>" selected = "selected"><%= ListRaces[j].name %></option>>
                        <%
                                }else{
                        %>
                            <option  name="race" value = "<%= ListRaces[j].id %>" ><%= ListRaces[j].name %></option>>
                        <%
                                }
                            }
                        }
                        %>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Sexe</label><br>
                        <SELECT name="sex">
                        <option></option>
                              <% if (ListPets[i].race_id=="Femelle") { %>
                             <option name ="sex" selected = "selected" >Femelle</option>
                             <option name ="sex">Male</option>
                             <% }else{ %>
                             <option name ="sex" >Femelle</option>
                             <option name ="sex" selected = "selected">Male</option>
                             <% } %>
                        </SELECT>
                    </div>
                    <div class="form-group">
                        <label>Age</label>
                        <input type="number" class="form-control" name="age" value = "<%= ListPets[i].age %>"min="0" max="50" step="0.5" value="1">
                    </div>
                    <div class="form-group">
                        <label>Biographie</label>
                        <textarea name = "bio"><%= ListPets[i].bio %></textarea>
                    </div>
                    <input type = "hidden" value =" <%= ListPets[i].id %>" name = "id">
                    <a href = "/pet/<%= ListPets[i].id %>/picture"><button type="button" class="btn btn-warning btn-sm">Modifier la photo</button></a>
                    <input type="submit" class="btn btn-warning btn-sm" value = "Mettre Ã  jour"><br><br>

                </form>
                <form action="/pet/delete" method="post">
                    <input type = "hidden" value =" <%= ListPets[i].id %>" name = "id">
                    <input type = "hidden" value =" <%= ListPets[i].name %>" name = "name">
                    <button type="submit" class="btn btn-danger btn-sm"">Supprimer mon animal</button>
                </form>
            </div>
        </div>


<%
        }
    }
%>

</div>
<br><br>
	<% include ./partials/footer %>

</body>
</html>
